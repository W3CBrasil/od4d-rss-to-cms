#!/usr/bin/env ruby

require 'rss_reader'
require 'rss_parser'
require 'cms_writer'

rss_url = 'http://feeds.feedburner.com/DadosAbertosParaDesenvolvimentoDaAmricaLatinaECaribePortugus'

rss_content = RSSReader.fetch_rss(rss_url)

rss = RSSParser.parse(rss_content)

writer = CMSWriter.new

rss.items.map do |item|
  writer.write item
end
